{
    "compilerOptions": {
        "rootDir": ".",
        "target": "es2019",
        "outDir": "out",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "declaration": true,
        "downlevelIteration": true,
        "emitDeclarationOnly": true,
        "isolatedModules": true,
        "typeRoots": ["node_modules/@types", "typings"]
    },
    "include": ["src/**/*", "src/*", "typings/**/*", "typings/*"]
}